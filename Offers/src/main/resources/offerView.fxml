    <children>
        <DatePicker fx:id="startDate" layoutX="14.0" layoutY="14.0" prefWidth="200.0"/>
        <DatePicker fx:id="endDate" layoutX="230.0" layoutY="14.0" prefWidth="200.0"/>
        <Button fx:id="searchButton" layoutX="450.0" layoutY="14.0" text="Search" onAction="#handleSearch"/>
        <ListView fx:id="specialOfferList" onMouseClicked="#handleAddReservation" layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="600.0"/>
    </children>
</AnchorPane>